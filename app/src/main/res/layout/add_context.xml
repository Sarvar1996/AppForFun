<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
 >

    <EditText
            android:hint="Description"

            android:id="@+id/NewdescriptET"
            android:layout_width="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/editText5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_height="150dp"
            android:textAlignment="viewStart" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"/>


    <EditText android:layout_width="0dp"
              android:hint="Name"
              android:padding="10dp"
              android:background="@color/colorWhite"
              android:layout_height="wrap_content"
              android:layout_marginTop="40dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:id="@+id/editText5"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


   <Button
           android:id="@+id/uploadBtn"
           android:text="Upload Image"
           android:padding="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/colorRed"
           android:textColor="@color/colorWhite"
           android:layout_marginTop="24dp"
           app:layout_constraintTop_toBottomOf="@+id/NewdescriptET"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp" android:textStyle="bold"
           android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
   <Button
           android:text="Submit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/submitbtn"
           android:background="@color/colorAccent"
           android:textColor="@color/colorWhite"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="8dp"
           android:textStyle="bold|italic"
           android:textAllCaps="true"
           android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/uploadBtn"
           android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>